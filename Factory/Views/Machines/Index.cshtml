@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Machines</h1>

@if(Model.Count == 0)
{
  <h3>No Machines found.</h3>
}
else 
{
  @foreach(Machine machine in Model)
  {
    <p>@Html.ActionLink($"{machine.MachineLabel}", "Details", new { id = machine.MachineId})</p>
  }
}

<div id="index-nav">
<p>@Html.ActionLink("Add new Machine", "Create")</p>
</div>