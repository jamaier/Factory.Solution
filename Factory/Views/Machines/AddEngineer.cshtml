@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Approve this engineer for a Machine</h2>

<h4>Add this Engineer to this machine @Html.DisplayFor(model => model.MachineLabel)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select an Engineer to add to this Machine:")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

  <p>@Html.ActionLink("Back to list", "Index")</p>
  <p>@Html.ActionLink("Add new Machine", "Create", "Machines")</p>