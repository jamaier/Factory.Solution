@{
  Layout = "_Layout";
}
@using Factory.Models
@model Factory.Models.Engineer

<h2>Approve this engineer for a Machine</h2>

<h4>Add this student to a course: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select a Machine")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Save" />
}

  <p>@Html.ActionLink("Back to list", "Index")</p>
  <p>@Html.ActionLink("Add new Machine", "Create", "Machines")</p>