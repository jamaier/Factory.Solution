@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if(Model.Count == 0)
{
  <h3>No engineers found.</h3>
}
else 
{
  @foreach(Engineer engineer in Model)
  {
    <p>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId})</p>
  }
}

<div id="index-nav">
<p>@Html.ActionLink("Add new Engineer", "Create")</p>
</div>